<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signinbg"
    tools:context=".SignUpT">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="611dp"
        android:text="Sign Up As Traveler"
        android:textAlignment="center"
        android:textColor="#F8D3CD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <EditText
        android:id="@+id/ETname"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:hint="Full Name"
        android:inputType="text"
        android:textSize="20dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="560dp" />

    <EditText
        android:id="@+id/ETage"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="510dp"
        android:hint="Age"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ETaddress"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="460dp"
        android:hint="Current Address"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TVgender"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="402dp"
        android:text="Gender"
        android:textColor="#ffffff"
        android:textSize="21dp" />


    <RadioGroup
        android:id="@+id/RGid"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="393dp" />

    <RadioButton
        android:id="@+id/RBmale"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="394dp"
        android:text="Male"
        android:textColor="#ffffff"
        android:textSize="20dp" />

        <RadioButton
        android:id="@+id/RBfemale"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="276dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="396dp"
        android:text="Female"
        android:textColor="#ffffff"
        android:textSize="20dp" />




    <EditText
        android:id="@+id/ETreligion"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="335dp"
        android:hint="Religion"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textShortMessage"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ETnumber"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="phone"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="285dp"
        android:hint="Contact Number"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ETemail"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="235dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ETpass"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="185dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textColor="#ffffff"
        android:textColorHint="#434040"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ETconfirmPass"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="135dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textColor="#ffffff"
        android:textColorHint="#434040"
        android:textSize="20dp" />
    <Button
        android:id="@+id/Bsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:background="#434040"
        android:layout_marginBottom="50dp"
        android:text="Sign In As Traveler"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp" />



</RelativeLayout>